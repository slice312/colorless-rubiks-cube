        nav.burger-menu__content
            img.burger-menu__logo(src="/src/assets/icons/cube.svg" alt="cube")
            ul.burger-menu__links
                li.burger-menu__links-item
                    a(href="./index.html") Консультации
                li.burger-menu__links-item
                    a(href="./services.html") Услуги
                li.burger-menu__links-item
                    a(href="./trainings.html") Тренинги
                li.burger-menu__links-item
                    a(href="./blog.html") Блог
