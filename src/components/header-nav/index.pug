header.header
    .container
        nav.header__wrap.row
            .header__logo.col-4
                a(href="./index.html")
                    img(src="/src/assets/icons/company-header-logo.svg" alt="company-header-logo")
            ul.header__menu.col-6
                li.header__menu-item
                    a(href="./index.html") Консультации
                li.header__menu-item
                    a(href="./service.html") Услуги
                li.header__menu-item
                    a(href="./train.html") Тренинги
                li.header__menu-item
                    a(href="./blog.html") Блог
            ul.header__links.col-2
                +socialLinks(header__link, "#282C37")
